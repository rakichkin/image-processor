<UserControl x:Class="ImageProcessor.Views.ImageProcessingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageProcessor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Source="{Binding ImageSrc}"
               />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Выбрать изображение"
                    Command="{Binding OpenFileCommand}"
                    Padding="7" />
            <Button Content="Сохранить изображение"
                    Command="{Binding SaveFileCommand}"
                    Padding="7" />
            <Button Content="Фильр Собеля"
                    Padding="7"
                    Command="{Binding SobolEdgeDetectionCommand}"/>
            <Button Content="Контрастность" 
                    Padding="7"
                    Command="{Binding MakeNegativeEffectCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
